{
  "daemons": [
    {
      "name": "Laravel Queue Worker",
      "command": "php /home/forge/api.coovia.com/artisan queue:work --sleep=3 --tries=3 --max-time=3600",
      "user": "forge",
      "directory": "/home/forge/api.coovia.com",
      "processes": 1,
      "autostart": true,
      "autorestart": true,
      "redirect_stderr": true,
      "stdout_logfile": "/home/forge/api.coovia.com/storage/logs/queue-worker.log"
    },
    {
      "name": "Laravel Schedule Runner",
      "command": "php /home/forge/api.coovia.com/artisan schedule:run",
      "user": "forge",
      "directory": "/home/forge/api.coovia.com",
      "processes": 1,
      "autostart": true,
      "autorestart": false,
      "redirect_stderr": true,
      "stdout_logfile": "/home/forge/api.coovia.com/storage/logs/scheduler.log"
    },
    {
      "name": "Laravel Horizon (if using Redis)",
      "command": "php /home/forge/api.coovia.com/artisan horizon",
      "user": "forge",
      "directory": "/home/forge/api.coovia.com",
      "processes": 1,
      "autostart": false,
      "autorestart": true,
      "redirect_stderr": true,
      "stdout_logfile": "/home/forge/api.coovia.com/storage/logs/horizon.log"
    }
  ],
  "cron_jobs": [
    {
      "command": "php /home/forge/api.coovia.com/artisan schedule:run",
      "user": "forge",
      "frequency": "every minute"
    },
    {
      "command": "php /home/forge/api.coovia.com/artisan backup:clean",
      "user": "forge",
      "frequency": "daily at 2:00 AM"
    },
    {
      "command": "php /home/forge/api.coovia.com/artisan queue:restart",
      "user": "forge",
      "frequency": "hourly"
    }
  ]
}
